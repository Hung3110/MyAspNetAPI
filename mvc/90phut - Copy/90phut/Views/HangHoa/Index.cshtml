@model List<GoodsMVC.Models.HangHoa>

@{
    ViewData["Title"] = "Danh sách hàng hóa";
}

<h1>Danh sách hàng hóa</h1>

<table class="table">
    <thead>
        <tr>
            <th>Mã hàng hóa</th>
            <th>Tên hàng hóa</th>
            <th>Số lượng</th>
            <th>Ghi chú</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaHangHoa</td>
                <td>@item.TenHangHoa</td>
                <td>@item.SoLuong</td>
                <td>@item.GhiChu</td>
            </tr>
        }
    </tbody>
</table>